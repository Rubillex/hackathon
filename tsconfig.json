{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "declaration": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "baseUrl": "resources/js",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": []
    },
    "include": ["resources/**/*.ts", "resources/**/*.vue", "resources/*.vue", "resources/*.ts", "/*.vue",],
    "exclude": [
        "node_modules",
    ]
}
